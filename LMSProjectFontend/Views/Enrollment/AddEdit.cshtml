@model Enrollment

@{
    ViewData["Title"] = Model.EnrollmentId == 0 ? "Add Enrollment" : "Edit Enrollment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="AddEdit" method="post">
                        @if (Model.EnrollmentId != 0)
                        {
                            <input type="hidden" asp-for="EnrollmentId" />
                        }

                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">Student ID</label>
                            <input asp-for="StudentId" class="form-control" />
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">Course ID</label>
                            <input asp-for="CourseId" class="form-control" />
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EnrolledOn" class="form-label">Enrollment Date</label>
                            <input asp-for="EnrolledOn" class="form-control" type="date" />
                            <span asp-validation-for="EnrolledOn" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
