@model LMSProjectFontend.Models.Enrollment

@{
    var isAdd = Model == null || Model.EnrollmentId == 0;
    ViewData["Title"] = isAdd ? "Add Enrollment" : "Edit Enrollment";
    var enrolledOnValue = (Model?.EnrolledOn ?? DateTime.Now).ToString("yyyy-MM-dd");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">


                    <form asp-action="AddEdit" method="post">

                        @if (Model.EnrollmentId != 0)
                        {
                            <input type="hidden" asp-for="EnrollmentId" />
                        }

                        <!-- Student Dropdown -->
                        <div class="mb-3">
                            <label asp-for="StudentId" class="form-label">Student</label>
                            <select asp-for="StudentId" class="form-control" asp-items="(ViewBag.Students ?? new SelectList(Enumerable.Empty<SelectListItem>()))">
                                <option value="">-- Select Student --</option>
                            </select>
                            <span asp-validation-for="StudentId" class="text-danger"></span>
                        </div>
    
                        <!-- Course Dropdown -->
                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">Course</label>
                            <select asp-for="CourseId" class="form-control" asp-items="(ViewBag.Courses ?? new SelectList(Enumerable.Empty<SelectListItem>()))">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>

                        <!-- Enrollment Date -->
                        <div class="mb-3">
                            <label asp-for="EnrolledOn" class="form-label">Enrollment Date</label>
                            <input asp-for="EnrolledOn" class="form-control" type="date" value="@enrolledOnValue" />
                            <span asp-validation-for="EnrolledOn" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Save</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
