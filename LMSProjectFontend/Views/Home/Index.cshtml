@{
    var role = Context.Session.GetString("UserRole");
    var summary = ViewBag.DashboardSummary as DashboardSummaryModel;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Welcome Header -->
    <div class="row">
        <div class="col-lg-12 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">
                                @if (role?.ToLower() == "admin")
                                {
                                    <span>Welcome to LMS Admin Dashboard! 🎉</span>
                                }
                                else
                                {
                                    <span>Welcome to LMS Dashboard! 🎉</span>
                                }
                            </h5>
                            <p class="mb-4">
                                @if (role?.ToLower() == "admin")
                                {
                                    <span>You have <span class="fw-bold">@(summary?.CourseCount ?? 0)</span> active courses and <span class="fw-bold">@(summary?.StudentCount ?? 0)</span> enrolled students.</span>
                                }
                                else
                                {
                                    <span>Track your learning progress and explore available courses.</span>
                                }
                            </p>
                            <a href="/Course" class="btn btn-sm btn-outline-primary">View Courses</a>
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="~/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row">
        <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="fw-semibold d-block mb-1">Total Courses</span>
                            <div class="d-flex align-items-end mt-2">
                                <h4 class="mb-0 me-2">@(summary?.CourseCount ?? 0)</h4>
                                <small class="text-success">(+@(summary?.CourseCount ?? 0))</small>
                            </div>
                            <small class="text-muted">Available courses</small>
                        </div>
                        <span class="badge bg-label-primary rounded p-2">
                            <i class="bx bx-book bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="fw-semibold d-block mb-1">Total Students</span>
                            <div class="d-flex align-items-end mt-2">
                                <h4 class="mb-0 me-2">@(summary?.StudentCount ?? 0)</h4>
                                <small class="text-success">(+@(summary?.StudentCount ?? 0))</small>
                            </div>
                            <small class="text-muted">Enrolled students</small>
                        </div>
                        <span class="badge bg-label-success rounded p-2">
                            <i class="bx bx-user bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="fw-semibold d-block mb-1">Total Teachers</span>
                            <div class="d-flex align-items-end mt-2">
                                <h4 class="mb-0 me-2">@(summary?.TeacherCount ?? 0)</h4>
                                <small class="text-success">(+@(summary?.TeacherCount ?? 0))</small>
                            </div>
                            <small class="text-muted">Active teachers</small>
                        </div>
                        <span class="badge bg-label-warning rounded p-2">
                            <i class="bx bx-chalkboard bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="fw-semibold d-block mb-1">Enrollments</span>
                            <div class="d-flex align-items-end mt-2">
                                <h4 class="mb-0 me-2">@(summary?.EnrollmentCount ?? 0)</h4>
                                <small class="text-success">(+@(summary?.EnrollmentCount ?? 0))</small>
                            </div>
                            <small class="text-muted">Total enrollments</small>
                        </div>
                        <span class="badge bg-label-info rounded p-2">
                            <i class="bx bx-graduation bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Statistics Row -->
    <div class="row">
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="fw-semibold d-block mb-1">Feedback Received</span>
                            <div class="d-flex align-items-end mt-2">
                                <h4 class="mb-0 me-2">@(summary?.FeedbackCount ?? 0)</h4>
                                <small class="text-success">(+@(summary?.FeedbackCount ?? 0))</small>
                            </div>
                            <small class="text-muted">Student feedback</small>
                        </div>
                        <span class="badge bg-label-secondary rounded p-2">
                            <i class="bx bx-message-square-dots bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex align-items-start justify-content-between">
                        <div class="content-left">
                            <span class="fw-semibold d-block mb-1">System Status</span>
                            <div class="d-flex align-items-end mt-2">
                                <h4 class="mb-0 me-2 text-success">Active</h4>
                                <small class="text-success">✓</small>
                            </div>
                            <small class="text-muted">All systems operational</small>
                        </div>
                        <span class="badge bg-label-success rounded p-2">
                            <i class="bx bx-check-circle bx-sm"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a asp-controller="Course" asp-action="Index" class="btn btn-outline-primary w-100">
                                <i class="bx bx-book me-2"></i>
                                Manage Courses
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a asp-controller="User" asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="bx bx-user me-2"></i>
                                Manage Users
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a asp-controller="Enrollment" asp-action="Index" class="btn btn-outline-warning w-100">
                                <i class="bx bx-graduation me-2"></i>
                                View Enrollments
                            </a>
                        </div>
                        <div class="col-md-3 col-sm-6 mb-3">
                            <a asp-controller="Feedback" asp-action="Ind    ex" class="btn btn-outline-info w-100">
                                <i class="bx bx-message-square me-2"></i>
                                View Feedback
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">Recent Activity</h5>
                    <div class="dropdown">
                        <button class="btn p-0" type="button" id="recentActivity" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="recentActivity">
                            <a class="dropdown-item" href="javascript:void(0);">View All</a>
                            <a class="dropdown-item" href="javascript:void(0);">Refresh</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled p-0 m-0">
                        <li class="d-flex mb-4 pb-1">
                            <div class="avatar flex-shrink-0 me-3">
                                <span class="avatar-initial rounded bg-label-primary">
                                    <i class="bx bx-book"></i>
                                </span>
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    <h6 class="mb-0">New Course Added</h6>
                                    <small class="text-muted">Advanced Web Development</small>
                                </div>
                                <div class="user-progress">
                                    <small class="fw-semibold">2 hours ago</small>
                                </div>
                            </div>
                        </li>
                        <li class="d-flex mb-4 pb-1">
                            <div class="avatar flex-shrink-0 me-3">
                                <span class="avatar-initial rounded bg-label-success">
                                    <i class="bx bx-user"></i>
                                </span>
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    <h6 class="mb-0">Student Enrolled</h6>
                                    <small class="text-muted">John Doe in Python Course</small>
                                </div>
                                <div class="user-progress">
                                    <small class="fw-semibold">4 hours ago</small>
                                </div>
                            </div>
                        </li>
                        <li class="d-flex mb-4 pb-1">
                            <div class="avatar flex-shrink-0 me-3">
                                <span class="avatar-initial rounded bg-label-warning">
                                    <i class="bx bx-message-square"></i>
                                </span>
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    <h6 class="mb-0">New Feedback</h6>
                                    <small class="text-muted">Excellent course content!</small>
                                </div>
                                <div class="user-progress">
                                    <small class="fw-semibold">6 hours ago</small>
                                </div>
                            </div>
                        </li>
                        <li class="d-flex">
                            <div class="avatar flex-shrink-0 me-3">
                                <span class="avatar-initial rounded bg-label-info">
                                    <i class="bx bx-graduation"></i>
                                </span>
                            </div>
                            <div class="d-flex w-100 flex-wrap align-items-center justify-content-between gap-2">
                                <div class="me-2">
                                    <h6 class="mb-0">Course Completed</h6>
                                    <small class="text-muted">Sarah completed JavaScript Basics</small>
                                </div>
                                <div class="user-progress">
                                    <small class="fw-semibold">1 day ago</small>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">System Overview</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-3">
                        <span>Courses</span>
                        <span class="fw-semibold">@(summary?.CourseCount ?? 0)</span>
                    </div>
                    <div class="progress mb-3" style="height: 8px;">
                        <div class="progress-bar" role="progressbar" style="width: @(summary?.CourseCount > 0 ? (summary.CourseCount * 100 / 20) : 0)%" aria-valuenow="@(summary?.CourseCount ?? 0)" aria-valuemin="0" aria-valuemax="20"></div>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span>Students</span>
                        <span class="fw-semibold">@(summary?.StudentCount ?? 0)</span>
                    </div>
                    <div class="progress mb-3" style="height: 8px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: @(summary?.StudentCount > 0 ? (summary.StudentCount * 100 / 10) : 0)%" aria-valuenow="@(summary?.StudentCount ?? 0)" aria-valuemin="0" aria-valuemax="10"></div>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span>Teachers</span>
                        <span class="fw-semibold">@(summary?.TeacherCount ?? 0)</span>
                    </div>
                    <div class="progress mb-3" style="height: 8px;">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @(summary?.TeacherCount > 0 ? (summary.TeacherCount * 100 / 5) : 0)%" aria-valuenow="@(summary?.TeacherCount ?? 0)" aria-valuemin="0" aria-valuemax="5"></div>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-3">
                        <span>Enrollments</span>
                        <span class="fw-semibold">@(summary?.EnrollmentCount ?? 0)</span>
                    </div>
                    <div class="progress mb-3" style="height: 8px;">
                        <div class="progress-bar bg-info" role="progressbar" style="width: @(summary?.EnrollmentCount > 0 ? (summary.EnrollmentCount * 100 / 10) : 0)%" aria-valuenow="@(summary?.EnrollmentCount ?? 0)" aria-valuemin="0" aria-valuemax="10"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
    
    .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    
    .badge {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
    }
    
    .progress {
        border-radius: 0.5rem;
    }
    
    .btn-outline-primary:hover,
    .btn-outline-success:hover,
    .btn-outline-warning:hover,
    .btn-outline-info:hover {
        transform: translateY(-1px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.15);
    }
    
    .avatar-initial {
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
    }
    
    .text-primary {
        color: #696cff !important;
    }
    
    .bg-label-primary {
        background-color: rgba(105, 108, 255, 0.16) !important;
        color: #696cff !important;
    }
    
    .bg-label-success {
        background-color: rgba(40, 199, 111, 0.16) !important;
        color: #28c76f !important;
    }
    
    .bg-label-warning {
        background-color: rgba(255, 159, 67, 0.16) !important;
        color: #ff9f43 !important;
    }
    
    .bg-label-info {
        background-color: rgba(0, 207, 232, 0.16) !important;
        color: #00cfe8 !important;
    }
    
    .bg-label-secondary {
        background-color: rgba(108, 117, 125, 0.16) !important;
        color: #6c757d !important;
    }
</style>