@model UserModel

@{
    ViewData["Title"] = Model.UserId == 0 ? "Add User" : "Edit User";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">
                        <i class="bx bx-user-plus me-2"></i>
                        @ViewData["Title"]
                    </h4>
                    <small class="opacity-75">Please fill in the user details below</small>
                </div>
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bx bx-error-circle me-2"></i>
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-controller="User" asp-action="AddEdit" method="post">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="CreatedAt" />

                        <!-- Full Name -->
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">
                                <i class="bx bx-user me-1"></i>Full Name
                            </label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-light">
                                    <i class="bx bx-user text-muted"></i>
                                </span>
                                <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                            </div>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold">
                                <i class="bx bx-envelope me-1"></i>Email Address
                            </label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-light">
                                    <i class="bx bx-envelope text-muted"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="Enter email address" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-semibold">
                                <i class="bx bx-lock me-1"></i>Password
                            </label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-light">
                                    <i class="bx bx-lock text-muted"></i>
                                </span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" autocomplete="off" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <!-- Role (Dropdown: Admin, Student, Teacher) -->
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-semibold">
                                <i class="bx bx-id-card me-1"></i>Role
                            </label>
                            <div class="input-group input-group-merge">
                                <span class="input-group-text bg-light">
                                    <i class="bx bx-id-card text-muted"></i>
                                </span>
                                <select asp-for="Role" class="form-select">
                                    <option value="">-- Select Role --</option>
                                    <option value="Admin" selected="@("Admin" == Model.Role)">Admin</option>
                                    <option value="Student" selected="@("Student" == Model.Role)">Student</option>
                                    <option value="Teacher" selected="@("Teacher" == Model.Role)">Teacher</option>
                                </select>
                            </div>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <!-- Status -->
                        <div class="mb-4">
                            <label asp-for="Status" class="form-label fw-semibold">
                                <i class="bx bx-toggle-right me-1"></i>Status
                            </label>
                            <select asp-for="Status" class="form-select">
                                <option value="true" selected="@Model.Status">Active</option>
                                <option value="false" selected="@(!Model.Status)">Inactive</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary me-md-2">
                                <i class="bx bx-arrow-back me-1"></i>Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bx @(Model.UserId == 0 ? "bx-plus" : "bx-check") me-1"></i>
                                @(Model.UserId == 0 ? "Add User" : "Update User")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
