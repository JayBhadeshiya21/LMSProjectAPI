@{
    ViewData["Title"] = "User List";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Users</li>
        </ol>
    </nav>

    <!-- Page Title + Add User -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">User List</h4>
        <a asp-controller="User" asp-action="AddEdit" class="btn btn-success">
            <i class="bx bx-plus"></i> Add New User
        </a>
    </div>

    <!-- Success / Error Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }



    <!-- User Table -->
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Role</th>
                        <th>Created At</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="userTableBody" class="table-border-bottom-0">
                    <!-- Rows will load via AJAX -->
                </tbody>
            </table>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#globalSearch").keyup(function () {
            let keyword = $(this).val();

            $.ajax({
                url: "http://localhost:5281/api/UserAPI/Search",
                type: "GET",
                data: { keyword: keyword },
                success: function (data) {
                    let rows = '';
                    $.each(data, function (i, user) {
                        rows += `<tr>
                                    <td><strong>${user.fullName || ''}</strong></td>
                                    <td>${user.email || ''}</td>
                                    <td>${user.password || ''}</td>
                                    <td>${user.role || ''}</td>
                                    <td>${user.createdAt ? new Date(user.createdAt).toLocaleString() : ''}</td>
                                    <td>
                                        ${user.status
                                            ? '<span class="badge bg-label-success me-1">Active</span>'
                                            : '<span class="badge bg-label-secondary me-1">Inactive</span>'}
                                    </td>
                                    <td>
                                        <a href="/User/AddEdit/${user.userId}"
                                           class="btn btn-sm btn-outline-warning me-1">
                                           <i class="bx bx-edit-alt"></i> Edit
                                        </a>
                                           <a href="/User/Delete/${user.userId}"
                                           class="btn btn-sm btn-outline-danger"
                                           onclick="return confirm('Are you sure you want to delete this user?');">
                                           <i class="bx bx-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>`;
                    });
                    $("#userTableBody").html(rows);
                },
                error: function () {
                    alert("Error fetching users from API");
                }
            });
        });

        // 🔹 Load all users initially
        $("#globalSearch").keyup();
    });
</script>
