@model List<ModuleModel>
@{
    ViewData["Title"] = "Modules";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="fw-bold">Module List</h4>
    <a asp-controller="Module" asp-action="AddEdit" class="btn btn-success">
        <i class="bx bx-plus"></i> Add Module
    </a>
    </div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Course</th>
                    <th>Title</th>
                    <th>Order</th>
                    <th>Video</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var m in Model)
                {
                    <tr>
                         <td>@m.courseTitle</td>
                        <td><strong>@m.Title</strong></td>
                        <td>@m.OrderIndex</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(m.VideoUrl))
                            {
                                <a href="@m.VideoUrl" target="_blank"><i class="bx bx-play-circle"></i> Open</a>
                            }
                        </td>
                        <td>
                            <a asp-controller="Module" asp-action="AddEdit" asp-route-id="@m.ModuleId" class="btn btn-sm btn-outline-warning me-1">
                                <i class="bx bx-edit-alt"></i> Edit
                            </a>
                            <a asp-controller="Module" asp-action="Delete" asp-route-id="@m.ModuleId" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Are you sure you want to delete this Module?');">
                                <i class="bx bx-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">No modules found.</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
 </div>


