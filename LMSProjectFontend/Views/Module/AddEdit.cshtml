@model ModuleModel

@{
    ViewData["Title"] = Model.ModuleId == 0 ? "Add Module" : "Edit Module";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-9 col-lg-8 col-xl-7">
            <div class="card shadow-lg border-0 rounded-3">
                <!-- Header -->
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">
                        <i class="bx bx-book-open me-2"></i>@ViewData["Title"]
                    </h4>
                    <small class="opacity-75">Fill in the module details below</small>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bx bx-error-circle me-2"></i>@TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bx bx-check-circle me-2"></i>@TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-controller="Module" asp-action="AddEdit" method="post">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <input type="hidden" asp-for="ModuleId" />

                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label fw-semibold">
                                <i class="bx bx-book me-1"></i>Course
                            </label>
                            <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">
                                <i class="bx bx-heading me-1"></i>Title
                            </label>
                            <input asp-for="Title" class="form-control" placeholder="Enter module title" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-semibold">
                                <i class="bx bx-detail me-1"></i>Content
                            </label>
                            <textarea asp-for="Content" rows="4" class="form-control" placeholder="Enter module content"></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VideoUrl" class="form-label fw-semibold">
                                <i class="bx bx-link me-1"></i>Video URL
                            </label>
                            <input asp-for="VideoUrl" class="form-control" placeholder="https://example.com/video" />
                            <span asp-validation-for="VideoUrl" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OrderIndex" class="form-label fw-semibold">
                                <i class="bx bx-list-ol me-1"></i>Order
                            </label>
                            <input asp-for="OrderIndex" type="number" min="0" class="form-control" />
                            <span asp-validation-for="OrderIndex" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bx bx-arrow-back me-1"></i>Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bx @(Model.ModuleId == 0 ? "bx-plus" : "bx-check") me-1"></i>
                                @(Model.ModuleId == 0 ? "Add Module" : "Update Module")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
