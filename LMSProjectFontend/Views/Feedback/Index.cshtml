@model List<Feedback>

@{
    ViewData["Title"] = "Feedback List";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" >Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Feedback</li>
        </ol>
    </nav>

    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">Feedback List</h4>
        <a asp-controller="Feedback" asp-action="AddEdit" class="btn btn-success">
            <i class="bx bx-plus"></i> Add New Feedback
        </a>
    </div>

    <!-- Feedback Table -->
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th>Feedback ID</th>
                        <th>Student ID</th>
                        <th>Course ID</th>
                        <th>Comment</th>
                        <th>Rating</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var feedback in Model)
                    {
                        <tr>
                            <td>@feedback.FeedbackId</td>
                            <td>@feedback.studentName</td>
                            <td>@feedback.courseName</td>
                            <td>@feedback.comments</td>
                            <td>@feedback.Rating</td>
                            <td>@feedback.CreatedAt</td>
                            <td>
                                <a asp-controller="Feedback" asp-action="AddEdit" asp-route-id="@feedback.FeedbackId" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bx bx-edit-alt"></i> Edit
                                </a>
                                <a asp-controller="Feedback" asp-action="Delete" asp-route-id="@feedback.FeedbackId" class="btn btn-sm btn-outline-danger">
                                    <i class="bx bx-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
