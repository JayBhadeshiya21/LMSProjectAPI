@model List<Feedback>
@{
    ViewData["Title"] = "Feedback List";
}

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" >Dashboard</a></li>
            <li class="breadcrumb-item active" aria-current="page">Feedback</li>
        </ol>
    </nav>

    <!-- Page Title -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="fw-bold">Feedback List</h4>
        <a asp-controller="Feedback" asp-action="AddEdit" class="btn btn-success">
            <i class="bx bx-plus"></i> Add New Feedback
        </a>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

   <div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead class="table-light">
                <tr>
                    <th>Feedback ID</th>
                    <th>Student Name</th>
                    <th>Course Name</th>
                    <th>Rating</th>
                    <th>Created At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var feedback in Model)
                    {
                        <tr>
                            <td>@feedback.FeedbackId</td>
                            <td>@feedback.StudentName</td>
                            <td>@feedback.CourseName</td>
                            <td>@feedback.Rating</td>
                                <td>
                                    @(feedback.CreatedAt.HasValue
                                    ? feedback.CreatedAt.Value.ToString("yyyy-MM-dd HH:mm")
                                    : "N/A")
                        </td>
                            <td>
                                <a asp-controller="Feedback" asp-action="AddEdit" asp-route-id="@feedback.FeedbackId" 
                                   class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bx bx-edit-alt"></i> Edit
                                </a>
                            <a asp-controller="Feedback" asp-action="Delete" asp-route-id="@feedback.FeedbackId"
                               class="btn btn-sm btn-outline-danger"
                               onclick="return confirm('Are you sure you want to delete this feedback?');">
                                <i class="bx bx-trash"></i> Delete
                            </a>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-4">
                            <div class="text-muted">
                                <i class="bx bx-message-square-detail fs-1"></i>
                                <p class="mt-2 mb-0">No feedback found</p>
                                <small>Start by adding some feedback using the "Add New Feedback" button above.</small>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

</div>