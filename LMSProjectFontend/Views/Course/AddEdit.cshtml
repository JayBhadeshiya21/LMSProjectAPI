@model CourseModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form asp-action="AddEdit" asp-controller="Course" enctype="multipart/form-data">
    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="ImageUrl" />

    <div class="form-group">
        <label asp-for="Title">Course Title</label>
        <input type="text" class="form-control" asp-for="Title" placeholder="Enter course title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description" placeholder="Enter description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId">Teacher</label>
        <select class="form-control" asp-for="TeacherId" asp-items="ViewBag.Teachers">
            <option value="">Select Teacher</option>
        </select>
        <span asp-validation-for="TeacherId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Course Image</label>
        <input type="file" class="form-control-file" asp-for="CourseImage" accept="image/*" onchange="previewImage(event)" />
    </div>

    <div class="form-group mt-2">
        @{
            var rawPath = !string.IsNullOrWhiteSpace(Model?.ImageUrl)
            ? Model.ImageUrl
            : null;
            var hasExisting = !string.IsNullOrWhiteSpace(rawPath);
            var isAbsolute = hasExisting && rawPath!.StartsWith("http", StringComparison.OrdinalIgnoreCase);
            var normalized = hasExisting ? (isAbsolute ? rawPath : rawPath!.TrimStart('~').TrimStart('/')) : null;
            if (hasExisting && !isAbsolute && normalized != null && !normalized.StartsWith("uploads/", StringComparison.OrdinalIgnoreCase))
            {
                normalized = $"uploads/{normalized}";
            }
            var existingSrc = hasExisting ? (isAbsolute ? normalized : $"http://localhost:5281/{normalized}") : null;
        }
        <img id="previewImg"
             src="@(existingSrc ?? "")"
             alt="@Model?.Title"
             class="img-thumbnail"
             style="max-height: 120px; max-width: 200px; @(hasExisting ? "" : "display:none;")" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-controller="Course" class="btn btn-danger">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(evt) {
            const input = evt.target;
            const img = document.getElementById('previewImg');
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = e => {
                    img.src = e.target.result;
                    img.style.display = 'inline-block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}
