@model Feedback
@{
    ViewData["Title"] = "New Feedback";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-area="User" asp-controller="Feedback" asp-action="Index">Feedback</a></li>
            <li class="breadcrumb-item active" aria-current="page">New</li>
        </ol>
    </nav>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-3">Feedback Preview</h5>

            <div class="mb-3">
                <label class="form-label">Course</label>
                <div class="form-control bg-light">@Model.CourseName @if(Model.CourseId.HasValue){<text>(#@Model.CourseId)</text>}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Student</label>
                <div class="form-control bg-light">@Model.StudentName @if(Model.StudentId.HasValue){<text>(#@Model.StudentId)</text>}</div>
            </div>

            <div class="mb-3">
                <label class="form-label">Rating</label>
                <div>
                    @for (var i = 1; i <= 5; i++)
                    {
                        if (Model.Rating.HasValue && i <= Model.Rating.Value)
                        {
                            <i class="bx bxs-star text-warning fs-5"></i>
                        }
                        else
                        {
                            <i class="bx bx-star text-muted fs-5"></i>
                        }
                    }
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Comment</label>
                <div class="form-control bg-light" style="min-height:100px">@Model.Comment</div>
            </div>

            <div class="d-flex justify-content-end">
                <a asp-area="User" asp-controller="Feedback" asp-action="Index" class="btn btn-secondary">Back</a>
            </div>
        </div>
    </div>
</div>





