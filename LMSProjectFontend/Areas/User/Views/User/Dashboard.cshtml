                <small class="text-muted float-end">Updated 1 month ago</small>
            </div>
            <div class="card-body">
                <ul class="p-0 m-0">
                    <li class="d-flex mb-4 pb-1">
                        <div class="avatar flex-shrink-0 me-3">
                            <img src="~/assets/img/avatars/1.png" alt="User" class="rounded">
                        </div>
                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between">
                            <div class="me-2">
                                <h6 class="mb-0">Completed Module 3</h6>
                                <small class="text-muted">Web Development Course</small>
                            </div>
                            <div>
                                <small class="text-muted">2 hours ago</small>
                            </div>
                        </div>
                    </li>
                    <li class="d-flex mb-4 pb-1">
                        <div class="avatar flex-shrink-0 me-3">
                            <img src="~/assets/img/avatars/1.png" alt="User" class="rounded">
                        </div>
                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between">
                            <div class="me-2">
                                <h6 class="mb-0">Started New Course</h6>
                                <small class="text-muted">Advanced JavaScript</small>
                            </div>
                            <div>
                                <small class="text-muted">1 day ago</small>
                            </div>
                        </div>
                    </li>
                    <li class="d-flex mb-4 pb-1">
                        <div class="avatar flex-shrink-0 me-3">
                            <img src="~/assets/img/avatars/1.png" alt="User" class="rounded">
                        </div>
                        <div class="d-flex w-100 flex-wrap align-items-center justify-content-between">
                            <div class="me-2">
                                <h6 class="mb-0">Earned Certificate</h6>
                                <small class="text-muted">HTML & CSS Fundamentals</small>
                            </div>
                            <div>
                                <small class="text-muted">3 days ago</small>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

