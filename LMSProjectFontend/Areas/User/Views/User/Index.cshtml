@{
    ViewData["Title"] = "User Dashboard";
}

<div class="row">
    <div class="col-lg-12 mb-4 order-0">
        <div class="card">
            <div class="d-flex align-items-end row">
                <div class="col-sm-7">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Welcome to LMS User Portal! ðŸŽ‰</h5>
                        <p class="mb-4">You have <span class="fw-bold">3</span> active courses and <span class="fw-bold">85%</span> completion rate.</p>
                        <a href="/User/User/Courses" class="btn btn-sm btn-outline-primary">View My Courses</a>
                    </div>
                </div>
                <div class="col-sm-5 text-center text-sm-left">
                    <div class="card-body pb-0 px-0 px-md-4">
                        <img src="~/assets/img/illustrations/man-with-laptop-light.png" height="140" alt="View Badge User">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between">
                    <div class="content-left">
                        <span class="fw-semibold d-block mb-1">Active Courses</span>
                        <div class="d-flex align-items-end mt-2">
                            <h4 class="mb-0 me-2">3</h4>
                            <small class="text-success">(+12%)</small>
                        </div>
                        <small class="text-muted">Total enrolled courses</small>
                    </div>
                    <span class="badge bg-label-primary rounded p-2">
                        <i class="bx bx-book bx-sm"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between">
                    <div class="content-left">
                        <span class="fw-semibold d-block mb-1">Completed</span>
                        <div class="d-flex align-items-end mt-2">
                            <h4 class="mb-0 me-2">85%</h4>
                            <small class="text-success">(+8%)</small>
                        </div>
                        <small class="text-muted">Overall progress</small>
                    </div>
                    <span class="badge bg-label-success rounded p-2">
                        <i class="bx bx-check-circle bx-sm"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between">
                    <div class="content-left">
                        <span class="fw-semibold d-block mb-1">Certificates</span>
                        <div class="d-flex align-items-end mt-2">
                            <h4 class="mb-0 me-2">2</h4>
                            <small class="text-success">(+3)</small>
                        </div>
                        <small class="text-muted">Earned certificates</small>
                    </div>
                    <span class="badge bg-label-warning rounded p-2">
                        <i class="bx bx-certificate bx-sm"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
        <div class="card">
            <div class="card-body">
                <div class="d-flex align-items-start justify-content-between">
                    <div class="content-left">
                        <span class="fw-semibold d-block mb-1">Study Hours</span>
                        <div class="d-flex align-items-end mt-2">
                            <h4 class="mb-0 me-2">24h</h4>
                            <small class="text-success">(+2h)</small>
                        </div>
                        <small class="text-muted">This week</small>
                    </div>
                    <span class="badge bg-label-info rounded p-2">
                        <i class="bx bx-time bx-sm"></i>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>

